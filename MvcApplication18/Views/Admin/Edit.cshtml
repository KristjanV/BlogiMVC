@model MvcApplication18.Models.Blog

@{
    ViewBag.Title = "Edit";
       if (!Request.IsAuthenticated)
    {
        Response.Redirect("~/Home/ErrorKiri");
    }

}

<h3>Muuda postitust</h3>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>@Html.DisplayTextFor(model => model.pealkiri)</legend>

        @Html.HiddenFor(model => model.id)

        <div class="editor-label">
            @Html.LabelFor(model => model.pealkiri)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.pealkiri)
            @Html.ValidationMessageFor(model => model.pealkiri)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.kuupaev)
        </div>
        <div class="editor-field">
            @Html.DisplayTextFor(model => model.kuupaev).ToString().Substring(0,10)
            @Html.ValidationMessageFor(model => model.kuupaev)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.sisu)
        </div>
        <div class="editor-field">
            
             @Html.TextAreaFor(model => model.sisu, new { cols = 100, @rows = 8 })
            @Html.ValidationMessageFor(model => model.sisu)
        </div>

        <p>
            <input type="submit" value="Uuenda" />
        </p>
    </fieldset>
}

<div class="link">
    @Html.ActionLink("<- Tagasi", "Index")
</div>
